      <!-- 正在改进的 -->
      <view wx:for="{{category_parent}}" wx:key="item" class="nav-tab-item {{currentTab == item.id?'cur':''}}" data-type="{{item.id}}" data-id="{{item.id}}" bindtap="tabNav">{{item.name}}</view>

    </scroll-view>
